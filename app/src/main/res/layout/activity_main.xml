<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.50"
    android:padding="10dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearTopLayout"
        android:layout_weight="0.50"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_weight="2.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="left">

            <TextView
                android:id="@+id/timerTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30s"
                android:layout_gravity="left"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:id="@+id/sumTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 + 15 = ?"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:padding="10dp"
                android:textSize="30sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="right">

            <TextView
                android:id="@+id/pointsTextViewId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/0"
                android:layout_gravity="right"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:padding="10dp"
                android:textSize="30sp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/gridLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">


            <Button
                android:id="@+id/button0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="0"
                android:text="3"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textSize="60sp"
                android:background="@color/colorAccent"
                android:textColor="#fff"
                android:onClick="chooseAnswer"/>

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="1"
                android:text="3"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textSize="60sp"
                android:background="@color/colorPrimary1"
                android:textColor="#fff"
                android:onClick="chooseAnswer"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:layout_gravity="fill"
                android:tag="2"
                android:text="3"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textSize="60sp"
                android:background="@color/colorPrimaryDark2"
                android:textColor="#fff"
                android:onClick="chooseAnswer"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_gravity="fill"
                android:tag="3"
                android:text="3"
                android:paddingTop="10dp"
                android:paddingBottom="15dp"
                android:textSize="60sp"
                android:background="@color/colorAccent"
                android:textColor="#fff"
                android:onClick="chooseAnswer"/>

        </GridLayout>

        <TextView
            android:id="@+id/resultTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="40sp"
            android:layout_marginTop="20dp"
            android:visibility="invisible"/>


        <Button
            android:id="@+id/playAgainButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resultTextViewId"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Play Again?"
            android:visibility="invisible"
            android:onClick="playAgain"
            android:layout_marginTop="20dp" />
    </LinearLayout>
</LinearLayout>